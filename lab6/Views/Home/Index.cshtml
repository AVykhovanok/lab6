@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title><Процедури</title>
    <style>
 

        table {
            border-collapse:collapse;
            border: 1px solid black;
        }

        th {
            padding: 5px;
            border: 1px solid black;
        }

        td {
            padding: 5px;
            border: 1px solid black;
        }

        td:last-child {
            border: 0px solid black;
            border-left: 1px solid black;
        }
    </style>
</head>
<body>
    <div>
        <h1>Поліклініка</h1>
        <table>
            <tr>
                <th><p>ID процедури</p></th>
                <th><p>Назва процедури</p></th>
                <th><p>Ціна процедури</p></th>
                <th></th>
            </tr>
            @foreach (var b in ViewBag.Procedures)
            {
                <tr>
                    <td><p>@b.ProcedureId</p></td>
                    <td><p>@b.ProcedureName</p></td>
                    <td><p>@b.ProcedurePrice</p></td>
                    <td><p><a href="/Home/MakeAnAppointment/@b.PatientId"><b>Записатися</b></a></p></td>
                </tr>
            }
        </table>
    </div>
</body>
</html>